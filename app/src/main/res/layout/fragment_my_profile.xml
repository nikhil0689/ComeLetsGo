<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:scrollbars="horizontal">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_user_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:fitsSystemWindows="true">
        <TextView
            android:id="@+id/my_profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="8dp"
            android:drawablePadding="16dp"
            android:gravity="left"
            android:padding="10dp"
            android:text="Email ID"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/my_profile_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="8dp"
            android:drawablePadding="16dp"
            android:gravity="left"
            android:padding="10dp"
            android:hint="Contact"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/my_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="8dp"
            android:drawablePadding="16dp"
            android:gravity="left"
            android:padding="10dp"
            android:hint="Name"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/my_profile_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="8dp"
            android:drawablePadding="16dp"
            android:gravity="left"
            android:padding="10dp"
            android:hint="Car"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/my_profile_car_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="8dp"
            android:drawablePadding="16dp"
            android:gravity="left"
            android:padding="10dp"
            android:hint="Car Color"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/my_profile_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="8dp"
            android:drawablePadding="16dp"
            android:gravity="left"
            android:padding="10dp"
            android:hint="Car License"
            android:textSize="25sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/my_profile_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
